    //client.println("Connection: close");
    //client.println();
    HTTPClient http;
  String url = "https://" + String(server) + String(endpoint);
      http.begin(client, url);
      http.addHeader("X-IBM-Client-Id", clientId);
      http.addHeader("X-IBM-Client-Secret", clientSecret);
      
